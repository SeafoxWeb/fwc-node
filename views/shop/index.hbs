{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive" />
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">Description: {{ this.description }}</p>
                        <p class="stock">In-stock: {{ this.stock }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">Price: Â£{{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-warning pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}